<% unless user_signed_in? %>
  <div class="jumbotron">
    <div class="container">
      <h1>Welcome to InstagraMay</h1>
      <p>This is a template for a simple marketing or informational website. It includes a large callout called a jumbotron and three supporting pieces of content. Use it as a starting point to create something more unique.</p>
      <p>
        <%= link_to 'Sign Up Â»', new_user_registration_path, class: 'btn btn-primary btn-lg' %>
      </p>
    </div>
  </div>
<% end %>

<div class='container'>
  <% if @posts.none? %>
    No posts yet
  <% else %>
    <div class='row'>
      <% @posts.each do |post| %>
        <div class='col-sm-4'>
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title"><%= post.title %></h3>
            </div>
            <div class="panel-body">
              <% if post.image.present? %>
                <%= image_tag post.image.url(:thumb), class: 'uploaded-pic' %>
              <% end %>
              <p><%= post.description %></p>
              <p>
                <% post.tags.each do |tag| %>
                  <%= link_to tag.name, '#' %>
                <% end %>
              </p>
            </div>

            <div class="panel-footer">Posted by: <%= post.user.email %></div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <%= link_to 'New post', new_post_path, class: 'btn btn-warning btn-lg' %>
</div>